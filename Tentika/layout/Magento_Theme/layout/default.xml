<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="top.links">
            <block class="Magento\Customer\Block\Account\RegisterLink" name="register-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">SIGN UP</argument>
                </arguments>
            </block>
            <block class="Magento\Customer\Block\Account\AuthorizationLink" name="authorization-link"
                   template="account/link/authorization.phtml"/>
            
        </referenceBlock>
        <referenceContainer name="footer">
            <block name="cms.block1" class="Magento\Cms\Block\Block" cacheable="true">
                <arguments>
                    <argument name="block_id" xsi:type="string">2</argument>
                </arguments>
            </block>
        </referenceContainer>
        <move element="navigation.sections" destination="header-wrapper" after="logo"/>
        <move element="store_switcher" destination="header.panel" before="-"/>
        <move element="currency" destination="header.panel" after="-"/>
        <move element="top.search" destination="header.panel" after="wish-list-link"/>
        <move element="wish-list-link" destination="header.panel" after="minicart"/>
        <move element="minicart" destination="header.panel" before="-"/>
        <referenceBlock name="report.bugs" remove="true"/>
        <referenceBlock name="form.subscribe" remove="false"/>
        <referenceBlock name="privacy-policy-link" remove="true" />
        <referenceBlock name="search-term-popular-link" remove="true" />
        <referenceBlock name="sales-guest-form-link" remove="true" />
        <referenceBlock name="catalog-search-advanced-link" remove="true" />
        <move element="copyright" destination="footer-container" after="-" />
        <move element="form.subscribe" destination="footer_content" after="-" />
        <referenceBlock name="navigation.sections">
            <block class="Magento\Theme\Block\Html\Header\Logo" name="store.logo" group="navigation-sections" template="html/header/logo.phtml">
                <arguments>
                    <argument name="logo_img_width" xsi:type="number">189</argument>
                    <argument name="logo_img_height" xsi:type="number">64</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
